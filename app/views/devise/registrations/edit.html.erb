<br />
<div class="row">
  <div class="span4">

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, html: {class: "well"}) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <legend>Edit User</legend>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :email%>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <%= f.input :current_password%>
        <%= f.input :password, label: "New Password"%>
        <%= f.input :password_confirmation, label: "Confirm New Password"%>
        


        <div><%= f.button :submit, "Update" %></div>
      </fieldset>
    <% end %>

    <h3>Delete your account?</h3>

    <p><%= button_to "Delete", registration_path(resource_name), :data => { :confirm => "Don't blow it..." }, :method => :delete %></p>

    <%= link_to "Back", :back %>
  </div>
  <div class="span8">
    <h2 align="center">Welcome!</h2>
    <div><img src="patuxent.JPG" /></div>
  </div>
</div>