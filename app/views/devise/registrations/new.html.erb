<br />
<div class="row">
  <div class="span4">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>
      <%= devise_error_messages! %>
      
      <fieldset>
        <legend>Sign Up</legend>
        <%= f.input :first_name, required: false%>
        <%= f.input :last_name, required: false %>
        <%= f.input :profile_name, required: false %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>

        <div><%= f.button :submit, "Sign up" %></div>
      </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="span8">
    <h2 align="center">Welcome!</h2>
    <div><img src="pebble.JPG" /></div>
  </div>
</div>