<!DOCTYPE html>
<html>
<head>
  <title>HdcpTracker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrap">

  <!-- Fixed Navbar -->
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a href="#" class="brand">HDCP Tracker</a>
        <ul class="nav">
          <li><%= link_to "All Rounds", rounds_path %></li>
        </ul>
        <ul class='nav pull-right'>
          <% if user_signed_in? %>
            <li><%= link_to current_user.profile_name, edit_user_registration_path %></li>
            <li><%= link_to "Log Out", logout_path %></li>
          <% else %>
            <li><%= link_to "Register", register_path %></li>
            <li><%= link_to "Log In",  login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>


  <!-- Page Content Here -->
  <div id="main" class="container">
    <% flash.each do |type, message| %>
      <div class="alert <%= flash_class type %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= message %>
      </div>
    <% end %>
    <%= yield %>
  </div>

  <div id="push"></div>

</div>

<div id="footer">
  <div class="container">
    <p class="muted credit" align="center">Page Created by Nick Fox</p>
  </div>
</div>




</body>
</html>
